bindsym $mod+$focusParentKey focus parent

## Navigate // Focus Child // <> z ##/
set_from_resource $focusChildKey i3-wm.binding.focus.child z
bindsym $mod+$focusChildKey focus child

## Navigate // Focus Window // <> k j h l ##
set_from_resource $focusLeftKey i3-wm.binding.focus.left h
set_from_resource $focusRightKey i3-wm.binding.focus.right l
set_from_resource $focusUpKey i3-wm.binding.focus.up k
set_from_resource $focusDownKey i3-wm.binding.focus.down j
bindsym $mod+$focusLeftKey focus left
bindsym $mod+$focusDownKey focus down
bindsym $mod+$focusUpKey focus up
bindsym $mod+$focusRightKey focus right

