#bindsym $mod+$i3-wm.binding.ws_prev2 workspace prev

## Navigate // Previous Workspace on Output // <><Ctrl> h ##
set_from_resource $prevwsKey i3-wm.binding.focus.prev Ctrl+h
bindsym $mod+$prevwsKey workspace prev_on_output

